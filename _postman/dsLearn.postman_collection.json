				{
					"name": "Login refresh token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (responseCode.code >= 200 && responseCode.code < 300) {\r",
									"    var json = JSON.parse(responseBody);\r",
									"    postman.setEnvironmentVariable('token', json.access_token);\r",
									"    postman.setEnvironmentVariable('refresh-token', json.refresh_token);\r",
									"}\r",
									"\r",
									"/* acima codigo que atribui à variavel de ambiente do postman 'token' o valor do campo 'access_token' recebido da requisição */"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "basic",
							"basic": [
								{
									"key": "password",
									"value": "{{client-secret}}",
